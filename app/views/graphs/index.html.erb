<h1>Listing graphs</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for graph in @graphs %>
  <tr>
    <td><%=h graph.name %></td>
    <td><%= link_to 'Show and edit', graph %></td>
    <td><%= link_to 'Change name and color', edit_graph_path(graph) %></td>
    <td><%= link_to 'Destroy', graph, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New graph', new_graph_path %>
